<h1 align = "center">Upcoming Tasks</h1>

<table align = "center" width = "40%">
  <tr>
    <th>Task</th>
    <th>Timeduration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @upcoming_tasks.each do |upcoming_task| %>
  <tr>
    <td align = "center"><%= upcoming_task.task %></td>
    <td align = "center"><%= upcoming_task.TimeDuration %></td>
    <td align = "center"><%= link_to 'Show', upcoming_task %></td>
    <td align = "center"><%= link_to 'Edit', edit_upcoming_task_path(upcoming_task) %></td>
    <td align = "center"><%= link_to 'Destroy', upcoming_task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Upcoming task', new_upcoming_task_path %>


